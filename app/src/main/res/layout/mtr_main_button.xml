<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mtrMainBtn_constraintLayout"
    android:layout_width="200sp"
    android:layout_height="32sp"
    android:background="@drawable/mtr_main_btn_normal">

    <TextView
        android:id="@+id/mtrMainBtn_main_textView"
        android:layout_width="72sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:text="START"
        android:textColor="@color/mtrPrimaryBlack"
        android:textStyle="bold"
        app:fontFamily="serif-monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mtrMainBtn_sub_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Atarashii Monogatari ~"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:fontFamily="cursive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toEndOf="@+id/mtrMainBtn_main_textView" />
</androidx.constraintlayout.widget.ConstraintLayout>